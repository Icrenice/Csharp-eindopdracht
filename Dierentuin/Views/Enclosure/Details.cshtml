@model Dierentuin.Models.Enclosure

@{
    ViewData["Title"] = "Enclosure Details";
}

<!-- Eventueel extra CSS -->
<style>
    body {
        background-color: #f1f3f5; /* Zachtgrijze achtergrond */
    }

    .page-header {
        background: linear-gradient(135deg, #007bff, #6c757d);
        color: #fff;
        padding: 2rem 1rem;
        border-radius: 8px;
        margin-bottom: 2rem;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
    }

        .page-header h1 {
            margin: 0;
            font-weight: 600;
        }

    .details-container {
        background-color: #fff;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
    }

        .details-container h4 {
            margin-bottom: 1rem;
            font-weight: 600;
        }

        .details-container p {
            margin-bottom: 1.5rem;
        }

        .details-container ul {
            padding-left: 1.5rem;
        }

            .details-container ul li {
                margin-bottom: 0.5rem;
            }

                .details-container ul li:last-child {
                    margin-bottom: 0;
                }

        .details-container a {
            display: inline-block;
            margin-top: 1rem;
            color: #007bff;
            text-decoration: none;
            transition: color 0.2s;
        }

            .details-container a:hover {
                color: #0056b3;
            }
</style>

<div class="container mt-4">
    <!-- Header / Title -->
    <div class="page-header">
        <h1>Enclosure Details</h1>
    </div>

    <!-- Details -->
    <div class="details-container">
        <h4>@Model.Name</h4>
        <p>Climate: @Model.Climate</p>
        <p>HabitatType: @Model.HabitatType</p>
        <p>SecurityLevel: @Model.SecurityLevel</p>
        <p>Size: @Model.Size</p>

        @if (Model.Animals != null && Model.Animals.Any())
        {
        <h4>Animals in this Enclosure:</h4>
        <ul>
            @foreach (var animal in Model.Animals)
                {
            <li>@animal.Name (@animal.Species) - Awake: @animal.IsAwake</li>
                }
        </ul>
        }
        else
        {
        <p>No animals found in this enclosure.</p>
        }

        <p>
            <a asp-action="Index">Back to List</a>
        </p>
    </div>
</div>



