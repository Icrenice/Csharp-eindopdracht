@model Dierentuin.Models.Enclosure

@{
    ViewData["Title"] = "Delete Enclosure";
}

<h1>Delete Enclosure</h1>

<h4>@Model.Name</h4>
<p>Are you sure you want to delete this enclosure?</p>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <input type="submit" value="Delete" />
    <a asp-action="Index">Cancel</a>
</form>