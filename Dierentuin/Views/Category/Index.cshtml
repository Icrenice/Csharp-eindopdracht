@model IEnumerable<Dierentuin.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>

<form method="get">
    <input type="text" name="search" placeholder="Search categories..." value="@Context.Request.Query["search"]" />
    <input type="submit" value="Filter" />
</form>

<p>
    <a asp-action="Create">Create New Category</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Animals Count</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var cat in Model)
    {
        <tr>
            <td>@cat.Name</td>
            <td>@(cat.Animals?.Count ?? 0)</td>
            <td>
                <a asp-action="Details" asp-route-id="@cat.Id">Details</a> |
                <a asp-action="Edit" asp-route-id="@cat.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@cat.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>