@model Dierentuin.Models.Animal

@{
    ViewData["Title"] = "Delete Animal";
}

<!-- Eventueel extra CSS -->
<style>
    body {
        background-color: #f1f3f5; /* Zachtgrijze achtergrond */
    }

    .page-header {
        background: linear-gradient(135deg, #dc3545, #6c757d);
        color: #fff;
        padding: 2rem 1rem;
        border-radius: 8px;
        margin-bottom: 2rem;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
    }

        .page-header h1 {
            margin: 0;
            font-weight: 600;
        }

    .form-container {
        background-color: #fff;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
    }

        .form-container h4 {
            margin-bottom: 1rem;
            font-weight: 600;
        }

        .form-container p {
            margin-bottom: 1.5rem;
        }

        .form-container input[type="submit"] {
            background-color: #dc3545;
            color: #fff;
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.2s;
        }

            .form-container input[type="submit"]:hover {
                background-color: #c82333;
            }

        .form-container a {
            display: inline-block;
            margin-top: 1rem;
            color: #007bff;
            text-decoration: none;
            transition: color 0.2s;
        }

            .form-container a:hover {
                color: #0056b3;
            }
</style>

<div class="container mt-4">
    <!-- Header / Title -->
    <div class="page-header">
        <h1>Delete Animal</h1>
    </div>

    <!-- Formulier -->
    <div class="form-container">
        <h4>@Model.Name (@Model.Species)</h4>
        <p>Are you sure you want to delete this?</p>

        <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>





