    ViewData["Title"] = "Privacy Policy";
}

<!-- Eventueel extra CSS -->
<style>
    body {
        background-color: #f1f3f5; /* Zachtgrijze achtergrond */
    }

    .page-header {
        background: linear-gradient(135deg, #007bff, #6c757d);
        color: #fff;
        padding: 2rem 1rem;
        border-radius: 8px;
        margin-bottom: 2rem;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .page-header h1 {
            margin: 0;
            font-weight: 600;
        }

    .content {
        background-color: #fff;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
    }

        .content h2 {
            margin-top: 0;
            font-weight: 600;
        }

        .content p {
            margin-bottom: 1rem;
        }

    .footer {
        text-align: center;
        margin-top: 2rem;
        color: #666;
    }
</style>

<div class="container mt-4">
    <!-- Header / Title -->
    <div class="page-header">
        <h1>Privacy Policy</h1>
    </div>

    <!-- Content -->
    <div class="content">
        <h2>Our Commitment to Privacy</h2>
        <p>
            At Dierentuin, we value your privacy. We do not collect any personal information from our users. All data used within the system is internally managed and pertains only to the zoo's operations.
        </p>

        <h2>Internal Data Usage</h2>
        <p>
            The data we manage includes information about animals, enclosures, and categories within the zoo. This data is used solely for the purpose of managing the zoo efficiently and effectively.
        </p>

        <h2>Contact Us</h2>
        <p>
            If you have any questions about this privacy policy.
        </p>
        <p>
            Don't contact us this was just an assignment.
        </p>
    </div>

    <!-- Footer -->
    <div class="footer">
        <p>&copy; 2025 - Dierentuin - Developed by Eric Abrokwah, Deo Arthur Nyann, and Debo Ogunkoya</p>
    </div>
</div>




