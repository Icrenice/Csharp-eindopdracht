<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dierentuin</title>

    <!-- Alle styling doen we inline -->
    <style>
        /* Basisreset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            color: #333;
        }

        /* --- NAVBAR-STYLING --- */
        header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #ccc;
            margin-bottom: 1rem;
        }

        /* Flex-container voor de navbar */
        .navbar {
            display: flex;
            align-items: center;
            justify-content: space-between;
            max-width: 1200px;
            margin: 0 auto; /* center de navbar */
            padding: 1rem;
        }

        .navbar-brand a {
            text-decoration: none;
            font-weight: 700;
            font-size: 1.25rem;
            color: #007bff; /* blauwe kleur voor merknaam */
        }

        /* Geen bulletpoints en horizontale uitlijning */
        .navbar-nav {
            list-style: none;
            display: flex;
        }

            .navbar-nav li {
                margin-left: 1rem;
            }

            /* Links in de navbar */
            .navbar-nav a {
                text-decoration: none;
                color: #333;
                font-weight: 500;
                padding: 0.5rem 0.75rem;
                transition: background-color 0.2s;
                border-radius: 4px;
            }

                .navbar-nav a:hover {
                    background-color: #e2e6ea;
                }

        /* --- MAIN CONTENT --- */
        main {
            max-width: 1200px;
            margin: 0 auto;
            padding: 1rem;
        }

        /* --- FOOTER --- */
        footer {
            border-top: 1px solid #ccc;
            font-size: 0.9rem;
            text-align: center;
            color: #666;
            max-width: 1200px;
            margin: 2rem auto 0 auto;
            padding: 1rem;
        }

            footer a {
                color: #007bff;
                text-decoration: none;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar">
            <!-- Linkerkant: merknaam / logo -->
            <div class="navbar-brand">
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    Dierentuin
                </a>
            </div>

            <!-- Rechterkant: navigatielinks -->
            <ul class="navbar-nav">
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        Home
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Zoo" asp-action="Index">
                        Zoo
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Animal" asp-action="Index">
                        Animals
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Category" asp-action="Index">
                        Category
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Enclosure" asp-action="Index">
                        Enclosure
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy">
                        Privacy
                    </a>
                </li>
            </ul>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        &copy; 2025 - Dierentuin -
        <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </footer>

    <!-- Verwijderde de Bootstrap-scripts. Eventueel jQuery of je eigen scripts hier -->
    @RenderSection("Scripts", required: false)
</body>
</html>
